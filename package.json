{
  "name": "keep",
  "version": "1.0.0",
  "description": "Tokenized multisig wallet",
  "main": "index.js",
  "repository": "https://github.com/kalidao/keep",
  "author": "KaliCo LLC <kalidao@protonmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "format": "prettier --write src/**.sol src/utils/**.sol src/extensions/metadata/**.sol src/extensions/tribute/**.sol src/extensions/tribute/utils/**.sol src/extensions/dao/**.sol src/extensions/dao/utils/**.sol test/**.sol flat/**.sol --plugin-search-dir=.",
    "format:list": "prettier --list-different 'src/**/*.sol' --plugin-search-dir=.",
    "format:check": "prettier --check 'src/**/*.sol' --plugin-search-dir=.",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix --ignore-path .solhintignore",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "clean": "forge clean",
    "setup": "forge clean && forge build --optimize --optimizer-runs 9999999",
    "sync": "forge update",
    "test": "forge clean && forge test --optimize --optimizer-runs 9999999 -vvv",
    "snapshot": "forge clean && forge snapshot --optimize --optimizer-runs 9999999",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "solhint": "^3.3.7"
  }
}
